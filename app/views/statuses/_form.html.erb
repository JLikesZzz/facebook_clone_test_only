<%= form_for :status, url: statuses_path do |form| %>
<div class="text-field">
   <%= form.label :title %>
   <%= form.text_field :title, type: 'title' %>
 </div>

<div class="text-field">
   <%= form.label :content %>
   <%= form.text_field :content, type: 'content' %>
 </div>


 <div class="submit-field">
   <%= form.submit %>
 </div>

<% end %>
